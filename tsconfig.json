{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": [
      "@nuxt/types",
      "@types/node",
      "@nuxtjs/i18n",
      "vuetify",
      "@pinia/nuxt",
      "nuxt"
    ],
    "jsx": "preserve",
    "resolveJsonModule": true,
    "noEmit": true,
    "useUnknownInCatchVariables": false
  },
  "include": [
    "nuxt.config.ts",
    "types/**/*.d.ts",
    "composables/**/*.ts",
    "stores/**/*.ts",
    "plugins/**/*.ts",
    "components/**/*.vue",
    "layouts/**/*.vue",
    "pages/**/*.vue",
    "error.vue",
    "middleware/**/*.ts"
  ],
  "exclude": ["node_modules", ".nuxt", "dist"]
}
